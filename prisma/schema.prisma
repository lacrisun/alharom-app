// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatPay {
  LUNAS
  BELUM_LUNAS
}
model User {
  id        String      @id 
  paket_umrah    String      @db.VarChar(42)
  tipe_kamar     String      @db.VarChar(42)
  nama_lengkap      String      @db.VarChar(64)
  nik       String      @db.VarChar(255)
  tempat_lahir String      @db.VarChar(255)
  tanggal_lahir  String      @db.VarChar(255)
  ayah_kandung   String      @db.VarChar(64)
  nomor_paspor String      @db.VarChar(255)
  paspor_expired  String      @db.VarChar(255)
  tempat_paspor String      @db.VarChar(255)
  paspor_dibuat String      @db.VarChar(255)
  jenis_kelamin  String      @db.VarChar(42)
  golongan_darah  String      @db.VarChar(4)
  status_kawin   String      @db.VarChar(42)     
  nama_waris String      @db.VarChar(64)
  hubungan_waris  String      @db.VarChar(255)
  alamat    String      @db.VarChar(255)
  email     String      @db.VarChar(64)
  nomor_telpon  String      @db.VarChar(255)
  pengalaman_umrah String      @db.VarChar(64)
  pendidikan String      @db.VarChar(64)
  pekerjaan String      @db.VarChar(42)
  penyakit  String      @db.VarChar(255)
  keluarga_darurat String      @db.VarChar(255)
  paystatus StatPay     @default(BELUM_LUNAS)
  didaftarkan String    @db.VarChar(255)
  data_dibuat DateTime @default(now())
  data_updated DateTime @updatedAt
}

model Mentor {
  id String @id
  nama_lengkap String @db.VarChar(255)
  email String @unique @db.VarChar(255)
  nomor_telepon String @db.VarChar(64)
  username String @unique @db.VarChar(64)
  password String @db.VarChar(64)
}

model Admin {
  id Int @id @default(autoincrement())
  nama_lengkap String @db.VarChar(255)
  email String @unique @db.VarChar(255)
  nomor_telepon String @db.VarChar(64)
  username String @unique @db.VarChar(64)
  password String @db.VarChar(64)
}